# Server
CHECKBOT_RAG_PORT=3020

# PostgreSQL
CHECKBOT_RAG_POSTGRES_HOST=checkbot-rag-db
CHECKBOT_RAG_POSTGRES_PORT=5432
CHECKBOT_RAG_POSTGRES_DB=checkbot_rag
CHECKBOT_RAG_POSTGRES_USER=checkbot_rag
CHECKBOT_RAG_POSTGRES_PASSWORD=change-me

# Embedding — Scaleway Qwen3-Embedding-8B (OpenAI-compatible)
CHECKBOT_RAG_EMBEDDING_PROVIDER=scaleway
CHECKBOT_RAG_EMBEDDING_MODEL=qwen3-embedding-8b
CHECKBOT_RAG_EMBEDDING_API_KEY=change-me
CHECKBOT_RAG_EMBEDDING_BASE_URL=https://api.scaleway.ai/v1
# Dimensions: Qwen3-Embedding supports Matryoshka (4096, 2048, 1024, 512)
# At ~1000 fact-checks (5000 chunks): 4096 dims ≈ 320 MB — safe to scale to ~50k claims
# Reduce to 1024 when approaching 500k+ claims
CHECKBOT_RAG_EMBEDDING_DIMENSIONS=4096
CHECKBOT_RAG_EMBEDDING_BATCH_SIZE=32

# Hybrid Search (RRF)
CHECKBOT_RAG_SEARCH_WEIGHT_VEC=1.0
CHECKBOT_RAG_SEARCH_WEIGHT_FTS=1.0
CHECKBOT_RAG_RRF_K=60
# Overfetch multiplier: fetch N*limit results before RRF to improve recall
CHECKBOT_RAG_SEARCH_OVERFETCH=3

# Chunking
CHECKBOT_RAG_MAX_CHUNK_CHARS=6000

# Frontend static files (relative to backend working dir)
CHECKBOT_RAG_STATIC_DIR=../frontend/.output/public
